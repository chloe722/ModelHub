<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_main_case_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="0dp"
    android:foreground="?android:selectableItemBackground"
    card_view:cardBackgroundColor="#fcfcfc"
    card_view:cardCornerRadius="3dp"
    card_view:contentPadding="5dp">

    <android.support.constraint.ConstraintLayout

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintlayout_interest_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_home_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxWidth="250dp"
            android:text="Car TV commercial"
            android:textColor="#4f2d3f"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imagebtn_home_job_interest"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toEndOf="@+id/imageview_home_job_company_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_home_job_company_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textview_home_job_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:text="Taipei, Taiwan"
            android:textColor="@color/case_company_location_title"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_home_job_company_logo"
            app:layout_constraintTop_toBottomOf="@+id/textview_home_job_title" />

        <ImageButton
            android:id="@+id/imagebtn_home_job_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp" />


        <TextView
            android:id="@+id/textview_home_job_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_monetization_on_black_24dp"
            android:text="Paid"
            android:textColor="@color/case_company_location_title"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageview_home_job_company_logo"
            app:layout_constraintTop_toBottomOf="@+id/textview_home_job_whom" />

        <TextView
            android:id="@+id/textview_home_job_whom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_person_black_36dp"
            android:text="Anyone"
            android:textColor="@color/case_company_location_title"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_home_job_company_logo"
            app:layout_constraintTop_toBottomOf="@+id/textview_home_job_location" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>