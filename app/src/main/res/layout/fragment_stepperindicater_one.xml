    <TextView
        android:id="@+id/stepper_one_current_location_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="3dp"
        android:text="Where are you based?"
        android:textColor="@color/colorPageIconFilterItem"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepper_one_textinputlayout_nationality" />

        <TextView
            android:id="@+id/stepper_one_phonefiled_reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/phone_number_will_not_be_revealed_in_public"
            android:textColor="@color/reminderRed"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/textinputLayout_stepperone_phone"
            app:layout_constraintTop_toBottomOf="@+id/textinputLayout_stepperone_phone" />


</android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepper_one_layout">
        <Button
            android:id="@+id/btn_stepperone_next"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/black_stroke"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

</ScrollView>


