<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutpage_items_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="9dp"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/about_me_page_toolbar_container">

    <Button
        android:id="@+id/about_page_about_modelhub_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/single_j"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:text="About Jeeva"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageview_hr_line_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line">


    </Button>

    <ImageView
        android:id="@+id/imageview_hr_line_two"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorHrLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_page_about_modelhub_btn">

    </ImageView>

    <Button
        android:id="@+id/about_page_termofuse_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:text="Term of Use"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_two" />

    <ImageView
        android:id="@+id/imageview_hr_line_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorHrLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_page_termofuse_btn"></ImageView>

    <Button
        android:id="@+id/about_page_privacy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_lock_yellow_24dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:text="Privacy Policy"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_two" />

    <ImageView
        android:id="@+id/imageview_hr_line_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorHrLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_page_privacy_btn"></ImageView>

    <Button
        android:id="@+id/about_page_contactus_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:text="Contact Us"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_4" />

    <ImageView
        android:id="@+id/imageview_hr_line_5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorHrLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_page_contactus_btn"></ImageView>

</LinearLayout>