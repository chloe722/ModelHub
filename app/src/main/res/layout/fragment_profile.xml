    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/profile_user_photo"
        app:layout_constraintStart_toStartOf="@+id/profile_user_photo"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_location">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/profile_user_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="5dp"
                app:srcCompat="@drawable/facebook_box_blue" />

            <ImageButton
                android:id="@+id/profile_user_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
