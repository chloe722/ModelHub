            <!--<TextView-->
            <!--android:id="@+id/case_details_hiring_resource_other_info_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="24dp"-->
