                <!--app:layout_constraintTop_toBottomOf="@+id/case_details_other_info_contact_name_title" />-->

            <!--<TextView-->
                <!--android:id="@+id/case_details_hiring_resource_other_info_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="24dp"-->
                <!--android:layout_marginTop="14sp"-->
                <!--android:drawableLeft="@drawable/ic_info_black_24dp"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:text="Other info:"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/titleforall"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/case_details_other_info_contact_name_title" />-->

            <TextView
                android:id="@+id/case_details_other_info_if_cover_travel_expenses_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:text="Yes"
                android:textSize="14sp"
                android:textColor="@color/textcolor"
                app:layout_constraintStart_toEndOf="@+id/case_details_other_info_if_cover_travel_expenses_title"
                app:layout_constraintTop_toTopOf="@+id/case_details_other_info_if_cover_travel_expenses_title" />

            <TextView
                android:id="@+id/case_details_other_info_contact_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Chloe Hsu"
                android:textSize="14sp"
                android:textColor="@color/textcolor"
                app:layout_constraintStart_toEndOf="@+id/case_details_other_info_contact_name_title"
                app:layout_constraintTop_toTopOf="@+id/case_details_other_info_contact_name_title" />

            <!--<TextView-->
                <!--android:id="@+id/case_details_hiring_resource_contact_email_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="8dp"-->
