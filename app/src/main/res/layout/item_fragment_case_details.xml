                <!--app:layout_constraintTop_toTopOf="@+id/case_details_other_info_contact_email_title" />-->


        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/case_details_shooting_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="18, July"
            app:layout_constraintStart_toEndOf="@+id/case_details_shooting_day_title"
            app:layout_constraintTop_toTopOf="@+id/case_details_shooting_day_title" />

        <TextView
            android:id="@+id/case_details_shooting_duration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_timelapse_black_24dp"
            android:drawablePadding="5dp"
            android:text="Shooting duration:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/case_details_shooting_day_title" />

        <TextView
            android:id="@+id/case_details_shooting_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="8hr"
            app:layout_constraintStart_toEndOf="@+id/case_details_shooting_duration_title"
            app:layout_constraintTop_toTopOf="@+id/case_details_shooting_duration_title" />

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
