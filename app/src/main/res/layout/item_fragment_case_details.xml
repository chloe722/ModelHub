            <!--android:textColor="@color/titleforall"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/case_details_other_info_contact_name_title" />-->

            <TextView
                android:id="@+id/case_details_other_info_travel_expenses_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:text="Yes"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/case_details_other_info_if_cover_travel_expenses_title"
                app:layout_constraintTop_toTopOf="@+id/case_details_other_info_if_cover_travel_expenses_title" />

            <TextView
                android:id="@+id/case_details_other_info_contact_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Chloe Hsu"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/case_details_other_info_contact_name_title"
                app:layout_constraintTop_toTopOf="@+id/case_details_other_info_contact_name_title" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/case_details_shooting_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="18, July"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/case_details_shooting_day_title"
            app:layout_constraintTop_toTopOf="@+id/case_details_shooting_day_title" />

        <TextView
            android:id="@+id/case_details_shooting_duration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_timelapse_black_24dp"
            android:drawablePadding="5dp"
            android:text="Shooting duration:"
            android:textColor="@color/case_company_location_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/case_details_shooting_day_title" />

        <TextView
            android:id="@+id/case_details_shooting_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="8hr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/case_details_shooting_duration_title"
            app:layout_constraintTop_toTopOf="@+id/case_details_shooting_duration_title" />

