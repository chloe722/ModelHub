<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:elevation="0dp"
    android:foreground="?android:selectableItemBackground"
    android:id="@+id/cardView_urgent_case_item"
    card_view:cardBackgroundColor="#FEFEFE"
    card_view:cardCornerRadius="3dp"
    card_view:contentPadding="5dp">

        <ImageView
            android:id="@+id/urgent_case_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/skyblue_rounded_shape" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="#80C2185B"
                android:foregroundGravity="bottom"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/urgent_company_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="16dp"
                android:scaleType="fitXY"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:srcCompat="@drawable/all_placeholder_avatar" />

            <TextView
                android:id="@+id/urgent_case_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="8dp"
                android:singleLine="true"
                android:text="Car TV commercial"
                android:textColor="#FEFEFE"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.132"
                card_view:layout_constraintStart_toEndOf="@+id/urgent_company_logo" />

            <TextView
                android:id="@+id/urgent_case_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_location_on_new24dp"
                android:text="Taipei, Taiwan"
                android:textColor="#FEFEFE"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/urgent_company_logo"
                card_view:layout_constraintTop_toBottomOf="@+id/urgent_case_title" />

            <TextView
                android:id="@+id/urgent_case_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="October, 10"
                android:textColor="#fcfcfc"
                card_view:layout_constraintStart_toStartOf="@+id/urgent_case_location"
                card_view:layout_constraintTop_toBottomOf="@+id/urgent_case_location" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
